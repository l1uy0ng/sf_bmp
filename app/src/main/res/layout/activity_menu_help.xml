<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:orientation="vertical" >

    <include layout="@layout/public_menu_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_padding_height_10"
        android:layout_marginTop="@dimen/margin_padding_height_16"
        android:text="@string/system_operation_download"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_padding_height_10"
        android:layout_marginTop="@dimen/margin_padding_height_10" >

        <ImageView
            android:id="@+id/iv_help"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/help_download" />

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding_height_10"
            android:layout_marginTop="@dimen/margin_padding_height_10"
            android:layout_toRightOf="@id/iv_help"
            android:text="@string/system_operation"
            android:textSize="@dimen/text_size_16" />

        <Button
            android:id="@+id/btn_download"
            android:layout_width="@dimen/margin_padding_height_100"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_help"
            android:layout_below="@id/tv_help"
            android:layout_marginLeft="@dimen/margin_padding_height_10"
            android:layout_marginTop="@dimen/margin_padding_height_10"
            android:layout_toRightOf="@id/iv_help"
            android:text="@string/download"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <View
        style="@style/line_top_bottom"
        android:layout_marginTop="@dimen/margin_padding_height_10" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding_height_10" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="意见反馈："
            android:textColor="@color/setting_text_color"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/right_selector" />
    </RelativeLayout>
    
    
    <View style="@style/line_top_bottom" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_padding_height_10"
        android:layout_marginTop="@dimen/margin_padding_height_10"
        android:text="@string/each_module_responsible"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_padding_height_10"
        android:layout_marginTop="@dimen/margin_padding_height_10"
        android:text="@string/financial_department"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_padding_height_10"
        android:layout_marginTop="@dimen/margin_padding_height_5"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杨邯"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding_height_10"
            android:text="13509613590"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_padding_height_10"
        android:layout_marginTop="@dimen/margin_padding_height_10"
        android:text="@string/logistics_office"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_padding_height_10"
        android:layout_marginTop="@dimen/margin_padding_height_5"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘佩霞"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding_height_10"
            android:text="13509613590"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>


</LinearLayout>