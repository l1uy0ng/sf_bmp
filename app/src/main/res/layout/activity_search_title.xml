<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_padding_height_50"
    android:layout_alignParentTop="true"
    android:background="@drawable/search_bar_bg"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <com.k2.mobile.app.view.widget.ClearEditText
        android:id="@+id/et_keyword"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="70dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:background="@drawable/search_bar_edit_selector"
        android:drawableLeft="@drawable/search_bar_icon_normal"
        android:hint="@string/input_keyword_history"
        android:singleLine="true"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_textview_frame"
        android:gravity="center"
        android:text="@string/global_cancel"
        android:textColor="@color/black" />

</RelativeLayout>