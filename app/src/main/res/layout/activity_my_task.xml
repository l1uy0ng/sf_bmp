<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:orientation="vertical" >

    <include layout="@layout/public_title" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/margin_padding_height_40"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_i_assigned"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/i_assigned"
            android:textColor="@color/bar_home_bg"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_assigned_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/assigned_i"
            android:textColor="@color/bar_home_bg"
            android:textSize="15dp" />
    </LinearLayout>
    
      <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#dee4e3" />

    <ImageView
        android:id="@+id/iv_cursor"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:background="@drawable/tab_selected"
        android:layout_marginTop="-4.5dp"
         />
    
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#22C9C9C9" />

</LinearLayout>